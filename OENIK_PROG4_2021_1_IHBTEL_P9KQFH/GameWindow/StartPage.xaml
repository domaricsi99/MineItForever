<Window x:Class="GameWindow.StartPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameWindow"
        mc:Ignorable="d"
        Title="Main Menu" Height="450" Width="800">
    <Grid HorizontalAlignment="Right" Width="800" Height="450" VerticalAlignment="Center">
        <Grid.Background>
            <ImageBrush ImageSource= "BgImages\StartBg2.bmp" Stretch="UniformToFill"/>
        </Grid.Background>
        <Button Background="Transparent" Foreground="White" BorderThickness="0" Click="LoadGame_Click"  Content="Load Game" Margin="339,196,339,217" Height="20" Width="100"/>
        <Button Background="Transparent" Foreground="White" BorderThickness="0" Click="NewGame_Click" Content="New Game" Margin="339,167,339,246" Height="20" Width="100"/>
        <Button Background="Transparent" Foreground="White" BorderThickness="0" Click="Exit_Click" Content="Exit" Margin="339,255,339,157" Height="20" Width="100"/>
        <Button Background="Transparent" Foreground="White" BorderThickness="0" Click="Highscore_Click" Content="Highscore" Margin="339,226,339,184" Height="20" Width="100"/>
    </Grid>
</Window>
